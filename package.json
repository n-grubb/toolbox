{
  "name": "@n-grubb/toolbox",
  "version": "0.0.1",
  "author": {
    "name": "Noah Grubb",
    "email": "noah@noahgrubb.com"
  },
  "description": "A personal component, style & utility library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/n-grubb/toolbox"
  },
  "main": "./dist/toolbox.umd.js",
  "module": "./dist/toolbox.es.js",
  "exports": {
    ".": {
      "import": "./dist/toolbox.es.js",
      "require": "./dist/toolbox.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/vue-fontawesome": "^3.0.0-3",
    "vue": "3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/test-utils": "^2.0.0-rc.0",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "vite": "^2.0.0-beta.65",
    "vitepress": "^0.12.0",
    "vue-jest": "^5.0.0-alpha.7"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(js)$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    }
  }
}
