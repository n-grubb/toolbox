{
  "name": "@n-grubb/toolbox",
  "version": "0.0.5",
  "author": {
    "name": "Noah Grubb",
    "email": "noah@noahgrubb.com"
  },
  "description": "A personal component, style & utility library.",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/n-grubb/toolbox"
  },
  "main": "./dist/toolbox.umd.js",
  "module": "./dist/toolbox.es.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "dependencies": {
    "vue": "3.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@iconify/json": "^1.1.306",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/test-utils": "^2.0.0-rc.0",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5",
    "vite": "^2.0.0-beta.65",
    "vite-plugin-components": "^0.6.12",
    "vite-plugin-icons": "^0.2.2",
    "vitepress": "^0.12.0",
    "vue-jest": "^5.0.0-alpha.7"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      ".*\\.(js)$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    }
  }
}
